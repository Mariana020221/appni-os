<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD700"
    android:padding="16dp"
    tools:context=".RegistroActivity">

    <Button
        android:id="@+id/btnCerrarApp"
        android:layout_width="61dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="38dp"
        android:backgroundTint="#FF0404"
        android:text="X"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="Nombre de usuario:"
        android:textColor="#3A57F3"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="199dp"
        android:layout_height="43dp"
        android:layout_below="@id/textViewNombre"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="103dp"
        android:background="#FFDAB9"
        android:gravity="center"
        android:textColor="#3A57F3"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewEdad"
        android:layout_width="146dp"
        android:layout_height="59dp"
        android:layout_below="@id/editTextNombre"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="123dp"
        android:gravity="center"
        android:text="Edad:"
        android:textColor="#3A57F3"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextEdad"
        android:layout_width="189dp"
        android:layout_height="43dp"
        android:layout_below="@id/textViewEdad"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="108dp"
        android:background="#FFDAB9"
        android:gravity="center"
        android:textColor="#3A57F3"
        android:textStyle="bold" />

    <Button
        android:id="@+id/botonRegistro"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_below="@id/editTextEdad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:backgroundTint="#3A57F3"
        android:text="Registrarse"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/imageViewSmall"
        android:layout_width="244dp"
        android:layout_height="238dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="151dp"
        android:contentDescription="DescripciÃ³n de la imagen"
        android:rotation="-41"
        android:rotationX="-8"
        android:rotationY="-12"
        android:src="@drawable/cuaderno" />


</RelativeLayout>
